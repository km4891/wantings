<div class="row section-wrapper">
  <h3> Log In</h3>
  <form class="login-form">
    <div>
      <label for="email-login">Email:</label>
      <input type="text" id="email-login" />
    </div>
    <div>
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" />
    </div>
    <div>
      <button type="submit">Log In</button>
    </div>
  </form>
</div>

<div class="row section-wrapper">
  <h3> Sign Up</h3>
  <form class="signup-form email-form">
    <div>
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <label for="first_name-signup">First Name:</label>
      <input type="text" id="first_name-signup" />
    </div>
    <div>
      <label for="last_name-signup">Last Name:</label>
      <input type="text" id="last_name-signup" />
    </div>
    <div>
      <label for="address-signup">Address:</label>
      <input type="text" id="address-signup" />
    </div>
    <div>
      <label for="zip-signup">Zip:</label>
      <input type="text" id="zip-signup" />
    </div>
    <div>
      <button type="submit">Sign Up</button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>
